<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MaterialNumberPicker">
        <attr name="mnpMinValue" format="integer" />
        <attr name="mnpMaxValue" format="integer" />
        <attr name="mnpValue" format="integer" />
        <attr name="mnpSeparatorColor" format="color" />
        <attr name="mnpTextSize" format="dimension" />
        <attr name="mnpTextColor" format="color" />
        <attr name="mnpTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
            <flag name="bold_italic" value="3" />
        </attr>
        <attr name="mnpTextAlign">
            <flag name="center" value="0" />
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>
        <attr name="mnpEditable" format="boolean" />
        <attr name="mnpWrapped" format="boolean" />
        <attr name="mnpFontname" format="string" />
    </declare-styleable>

</resources>
